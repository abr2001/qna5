$ ->
  $('.edit-answer-link').click (e) ->
    e.preventDefault();
    $(this).hide();
    answer_id = $(this).data('answerId');
    $('form#edit-answer-' + answer_id).show();

  $('.answers').children().each ->
    if $(this).find('.current-user-rate-answer').attr("rate") == "0"
      $(this).find('.btn-cancel-rate-answer').hide();


