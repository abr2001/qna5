$('.errors').html('');

<% if @answer.valid? %>
  console.log($('#answer-<%= @answer.id %>')[0] === undefined)
  if ($('#answer-<%= @answer.id %>')[0] === undefined) {
    $('.answers').append("<%= j render @answer, index: @question.answers.count - 1 %>")
  }
  $('.edit-answer-link').click(function(e) {
    e.preventDefault();
    $(this).hide();
    answer_id = $(this).data('answerId');
    $('form#edit-answer-' + answer_id).show();
  });

<%else%>
  $('.answers').append("<%= j render 'shared/error_message', item: @answer %>");
<%end%>

