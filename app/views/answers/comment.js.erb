$('.errors').html('');

<% if @comment.valid? %>
  $('#list-comment-answer-<%= @commentable.id%>').html("<%= j render 'shared/comments', item: @commentable%>");
  $('.answer-comment-body').val('');
  $('.add-answer-comment-link').show();
  $('.comment-answer').hide();
  $('.add-answer-comment-link').click(function(e) {
    e.preventDefault();
    $(this).hide();
    $('.comment-answer').show();
  });

<%else%>
  $('.question').append("<%= j render 'shared/error_message', item: @comment %>");
<%end%>
