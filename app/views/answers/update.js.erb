$('.errors').html('');

<% if @answer.valid? %>
  $('#answer-<%= @answer.id %>').html("<%= j render @answer, index: @question.answers.count - 1 %>");
    $('.edit-answer-link').click(function(e) {
      e.preventDefault();
      $(this).hide();
      answer_id = $(this).data('answerId');
      $('form#edit-answer-' + answer_id).show();
  });
<%else%>
  $('#answer-<%= @answer.id %>').append("<%= j render 'shared/error_message', item: @answer %>");
<%end%>

$('#answer_body').val('');

